<h2>MBA学生・卒業生の新規登録</h2>

<div class="row">
  <div class="col-md-4 col-md-offset-4">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :name, "お名前" %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="form-group">
    <%= f.label :email, "Eメール" %><br />
    <%= f.email_field :email %>
  </div>

  <div class="form-group">
    <%= f.label :password, "パスワード" %>
    <% if @minimum_password_length %>
    <em>（<%= @minimum_password_length %> 文字以上入力してください）</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "パスワード再入力" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "MBA学生として登録", class: "btn btn-large btn-primary" %>
  </div>
<% end %>

<h2>リンクトインで登録する</h2>
<%= link_to "Sign in with Facebook", student_omniauth_authorize_path(:facebook) %>

<%= render "students/shared/links" %>

  </div>
</div>
