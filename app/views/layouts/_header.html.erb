<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "SpotSket", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home", root_path %></li>
        
        <% if student_signed_in? %>
          <li><%= link_to "Projects", '#' %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", student_registration_path %></li>
              <li><%= link_to "Settings", edit_student_registration_path %></li>
              <li><%= link_to "Password", edit_student_password_path %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", destroy_student_session_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% elsif company_signed_in? %>
          <li><%= link_to "Projects", '#' %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", company_registration_path %></li>
              <li><%= link_to "Settings", edit_company_registration_path %></li>
              <li><%= link_to "Password", edit_company_password_path %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", destroy_company_session_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Student log in", new_student_session_path %></li>
          <li><%= link_to "Company log in", new_company_session_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>